<h1>Patient Details</h1>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>
<p>
  <strong>Age:</strong>
  <%= @patient.age %>
</p>
<p>
  <strong>Address:</strong>
  <%= @patient.address %>
</p>
<p>
  <strong>Phone:</strong>
  <%= @patient.phone %>
</p>
<p>
  <strong>Registered At:</strong>
  <%= @patient.registered_at.strftime("%Y-%m-%d") if @patient.registered_at %>
</p>

<%= link_to 'Edit', edit_patient_path(@patient), class: 'btn btn-secondary' %>
<%= link_to 'Back to Patients', patients_path, class: 'btn btn-primary' %>
