<h1 class="text-center my-4">Login</h1>

<div class="login-container">
  <%= form_with url: login_path, local: true, html: { class: 'login-form' } do |form| %>
    <div class="form-group mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
    </div>

    <div class="d-grid">
      <%= form.submit "Login", class: "btn btn-primary btn-block" %>
    </div>

    <% if flash[:alert] %>
      <div class="alert alert-danger mt-3"><%= flash[:alert] %></div>
    <% end %>
  <% end %>
</div>
